<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="known">
    
    <h1>
    <% @cart_produces.each do |produce| %>  
      <%= produce.title %> 
    <%end%>  
    </h1>
    
    <h2>
    <% @cart_produces.each do |produce| %>   
      $<%= produce.price %>0 
    <%end%>  
    </h2>
    <p>(Charged Monthly)</p>
    
    
    <div class="hide">
      <% @cart_produces.each do |produce| %>   
        <%= f.text_field :title, value: produce.title %>
        <%= f.text_field :price, value: produce.price %>
        <%= f.text_field :amount, value: 'monthly' %>
        <%= f.text_field :username, value: current_user.email %>
      <%end%>  
    </div>
    
    
  </div>

  <div class="field">
    <%= f.label :firstName, "First Name" %><br>
    <%= f.text_field :firstName %>
  </div>
  <div class="field">
    <%= f.label :lastName, "Last Name" %><br>
    <%= f.text_field :lastName %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zipcode %><br>
    <%= f.text_field :zipcode %>
  </div>
  <div class="field">
    <%= f.label :phoneNumber, "Phone Number" %><br>
    <%= f.text_field :phoneNumber %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_field :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
